{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc"]
    },
    "source": {
        "include": ["src/api"],
        "includePattern": ".mjs$",
        "excludePattern": "(node_modules/|doc|./src/page/window_right/doc/)"
    },
    "plugins": ["plugins/markdown"],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": true,
        "useLongnameInNav": false,
        "showInheritedInNav": true,
        "default": {
            "staticFiles": {
                "paths": ["./tutorial/"]
            }
        }
    },
    "opts": {
        "mainpagetitle": "RF Dopa Edit Documentation",
        "destination": "./src/page/window_right/doc/",
        "encoding": "utf8",
        "recurse": true,
        "template": "./jsdoc_template",
        "readme": "./README.md",
        "tutorials": "./tutorial"
    }
}
